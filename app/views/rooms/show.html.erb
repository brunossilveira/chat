<div class="row">
  <div class="col-lg-10">
    <h3><%= @room.title %></h3>
  </div>

  <div class="col-lg-2">
    <h3>Users:</h3>
  </div>
</div>

<div class="row">
  <div  class="col-lg-10">
    <div id="messages" data-room-id="<%= @room.id %>">
      <%= render @room.messages %>
    </div>
  </div>

  <div class="col-lg-2">
    <ul id="users">
    </ul>
  </div>
</div>

<nav class="navbar navbar-default navbar-fixed-bottom">
  <div class="container">
    <%= simple_form_for @message, url: '#' do |f| %>
      <%= hidden_field_tag 'room_id', @room.id %>
      <div class="form-group">
        <%= f.input :body, label: false, input_html: { class: 'form-control' } %>
        <small class="text-muted">From 2 to 1000 characters</small>
      </div>

      <%= f.button :submit, class: 'btn btn-default' %>
    <% end %>
  </div>
</nav>
